@model IList<flowers.web.ViewModel.Flowers.FlowerListView>
<section class="page">
    <h1 class="page-title">ALL FLOWERS</h1>
    <div class="gallery-wrapper">
        @foreach (var flower in Model)
        {
            <div class="gallery-card">
                <div><span>@flower.Name</span></div>
                <img src="@flower.ImageUrl">
                <div>&nbsp;<span>@flower.Height</span><span>@flower.Color</span></div>
                <div class="buttons-container">
                    <a class="btn btn-dark" asp-action="details" asp-controller="flower" asp-route-id="@flower.Id">Se
                        mer</a>
                    <a class="btn btn-dark" asp-action="edit" asp-controller="flower" asp-route-id="@flower.Id">Ã„ndra</a>
                </div>
            </div>
        }
    </div>



</section>